void __fastcall TMainForm::Image1Click(TObject *Sender)
{
     if(SplitView1->Opened) SplitView1->Close();
     else SplitView1->Open();
}
//---------------------------------------------------------------------------

void __fastcall TMainForm::FormResize(TObject *Sender)
{
     if(MainForm->Width<640) SplitView1->Close();
     else SplitView1->Open();
}
